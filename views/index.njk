                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-html5"></i>
                    </div>

                    <div class="flip-card-back">
                        HTML
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-css3-alt"></i>
                    </div>

                    <div class="flip-card-back">
                        CSS
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-js"></i>
                    </div>

                    <div class="flip-card-back">
                        JAVASCRIPT
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-node"></i>
                    </div>

                    <div class="flip-card-back">
                        NODEJS
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-sass"></i>
                    </div>

                    <div class="flip-card-back">
                        SASS
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-react"></i>
                    </div>

                    <div class="flip-card-back">
                        REACT
                    </div>
                </div>
            </li>

            <li class="flip-card skills__container__list__item">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <i class="fab fa-npm"></i>
                    </div>

                    <div class="flip-card-back">
                        NPM
                    </div>
                </div>
            </li>
        </ul>

        <div class="skills__container__img">
            <img src="{{ '/assets/images/skills.png' | url }}" alt="Image of a cartoon" loading="lazy">
        </div>
    </div>
</section>

<section class="linking projects max-width padding" id="projects">
    <h2 class="h2-title">
        Projects
    </h2>

    <div class="projects__wrapper">
        <ul class="projects__wrapper__list">
            {% for project in projects %}
                <li class="projects__wrapper__list__item">
                    <a class="flex" href="{{ project.link }}" target="_blank">
                        <div class="flex__item flex__img">
                            <img src="{{ '/assets/images/' | url }}{{ project.img }}" alt="Image of project" loading="lazy">
                        </div>

                        <div class="flex__item flex__text">
                            <p class="title">{{ project.title }}</p>
                            <p class="description">{{ project.description }}</p>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="projects__wrapper__img">
            <img src="{{ '/assets/images/projects.png' | url }}" alt="Image of a cartoon" loading="lazy">
        </div>
    </div>
</section>

